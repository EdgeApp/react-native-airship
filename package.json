{
  "name": "react-native-airship",
  "version": "0.2.1",
  "private": false,
  "description": "Flexible toolkit for building modals & alerts",
  "keywords": [
    "react native",
    "modal",
    "alert",
    "toast"
  ],
  "repository": "git@github.com:EdgeApp/react-native-airship",
  "license": "MIT",
  "author": "William Swanson <swansontec@gmail.com>",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "/CHANGELOG.md",
    "/lib/*",
    "/package.json",
    "/README.md",
    "/src/*"
  ],
  "scripts": {
    "build.flow": "flow",
    "build.lib": "tsc && cp src/index.flow.js lib/src/index.js.flow && rimraf lib/AirshipDemo",
    "clean": "rimraf lib",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prepare": "npm-run-all clean -p build.*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && run-p build.*"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "dependencies": {
    "react-native-safe-area-view": "^0.14.9",
    "yavent": "^0.1.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.43",
    "@types/react-native": "^0.63.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-config-standard-kit": "^0.14.4",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.132.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  }
}
